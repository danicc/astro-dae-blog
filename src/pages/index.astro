---
import HomeLayout from "@layouts/HomeLayout.astro";

import { Image } from "astro:assets";
import logoImage from "@images/logo.png";
import bgImage from "@images/bg.jpg";
---

<HomeLayout>
  <div
    id="hero"
    class="flex flex-col justify-center items-center relative bg-linear-to-t from-[#3572bcb3] to-[#1a1a1ae6]
	text-white text-center py-4"
  >
    <!-- Background -->
    <Image
      src={bgImage}
      alt="landscape background"
      quality={80}
      class="absolute inset-0 object-cover w-full h-full z-[-1]"
    />

    <!-- Logo -->
    <div
      class="size-40 sm:size-50 flex flex-col align-center justify-center shadow-[inset_0_0_8px_2px_rgba(250,250,210,0.3)] border border-yellow-300/30 rounded-[50%_25%_50%_25%]"
    >
      <Image class="p-4" src={logoImage} alt="logo" />
    </div>

    <!-- Short About Me -->
    <div class="mt-2 flex flex-col gap-2">
      <h1 class="text-xl sm:text-3xl font-bold">
        Hi I'm<br />Daniel Alberto Esquinazi
      </h1>
      <p class="text-md max-w-80 mx-auto">
        Here I am going to write about Javascript, React and other frontend
        technologies
      </p>
      <div class="flex items-center justify-center gap-5 mt-6">
        <a
          class="w-26 py-2 px-5 bg-sky-500 hover:bg-sky-600 active:bg-sky-700 rounded-4xl border-0 cursor-pointer
			 transition delay-10 duration-50 ease-in hover:scale-105"
          href="#">Portfolio</a
        >
        <a
          class="w-26 py-2 px-5 bg-sky-500 hover:bg-sky-600 active:bg-sky-700 rounded-4xl border-0 cursor-pointer
			 transition delay-10 duration-50 ease-in hover:scale-105"
          href="#">Blog</a
        >
      </div>
    </div>
  </div>

  <div
    id="content"
    class="py-8 px-6 overflow-y-auto md:padding-x-12 border-2 border-amber-400"
  >
    Content
  </div>
</HomeLayout>
