---
interface Props {
  id: string;
  title: string;
  date: Date;
  category: string;
  description: string;
}

const { id, title, date, category, description } = Astro.props;
const postUrl = `/blog/posts/${id}`;
---

<div class="py-2 px-4">
  <a href={postUrl} class="text-sky-950 relative active:text-sky-700">
    <span
      class="absolute
            text-4xl
            -translate-x-3
            -translate-y-3
            opacity-20
            select-none
            md:text-[3.5rem]"
      >{title[0]}</span
    >
    <h3 class="text-xl font-bold">
      {title}
    </h3>
  </a>
  <p class="text-black">
    {date.toDateString()} - {category}
  </p>
  <p class="text-black">
    {description}
    <a href={postUrl} class="text-blue-400">Read more</a>
  </p>
</div>
