---
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
  slug: string;
  title: string;
  date: Date;
  category: string;
  description: string;
}

const { slug, title, date, category, description } = Astro.props;
import { getLangFromUrl } from "@i18n/utils";
const lang = getLangFromUrl(Astro.url);

const postUrl = `/blog/posts/${slug}`;
---

<div class="py-2 px-4">
  <a href={getRelativeLocaleUrl(lang, postUrl)} class="text-sky-950 relative active:text-sky-700">
    <span
      class="absolute
            text-4xl
            -translate-x-3
            -translate-y-3
            opacity-20
            select-none
            md:text-[3.5rem]"
      >{title[0]}</span
    >
    <h3 class="text-xl font-bold">
      {title}
    </h3>
  </a>
  <p class="text-black">
    {date.toDateString()} - {category}
  </p>
  <p class="text-black">
    {description}
    <a href={getRelativeLocaleUrl(lang, postUrl)} class="text-blue-400">Read more</a>
  </p>
</div>
