---
import { getRelativeLocaleUrl } from "astro:i18n";

import { getLangFromUrl, defaultLang } from "@i18n/utils";
const { pathname } = Astro.url;
const lang = getLangFromUrl(Astro.url);
---

<nav class="text-white" transition:name="hero-to-nav">
  <ul class="flex flex-row gap-4">
    <li
      class:list={[
        pathname.startsWith(`/${lang}/portfolio`) &&
          "border-b-4 border-blue-500",
      ]}
    >
      <a href={getRelativeLocaleUrl(lang, "portfolio")}>Portfolio</a>
    </li>
    <li
      class:list={[
        pathname.startsWith(`/${lang}/blog`) && "border-b-4 border-blue-500",
      ]}
    >
      <a href={getRelativeLocaleUrl(lang, "blog")}>Blog</a>
    </li>
  </ul>
</nav>
